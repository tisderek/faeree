<!DOCTYPE html>
<html lang="en">
<head>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  
  <title>Faeree</title>

  <!-- custom stylesheets -->
  <link rel="stylesheet" href="/assets/stylesheets/normalize.css">
  <link rel="stylesheet" href="/assets/stylesheets/application.css">

  <!-- responsiveness -->
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="viewport" content="height=device-height, initial-scale=1">

  <!-- semantic ui -->
  <!-- <link rel="stylesheet" href="/semantic/semantic.css"> -->

  <!-- mapbox -->
  <link rel='stylesheet' href='https://api.tiles.mapbox.com/mapbox.js/v2.2.1/mapbox.css'/>
</head>
<body>
  <div id="sidebar" class="ui inverted labeled icon left inline vertical sidebar menu">
    <a class="item" id="sidebar-options" href="#">
      <i class="send outline icon"></i>
      Tell friends
    </a>
    <a class="item" id="sidebar-notifications" href="#">
      <i class="alarm outline icon"></i>
      Notifications
    </a>
    <a class="item" id="sidebar-history" href="#">
      <i class="history icon"></i>
      History
    </a>
    <a class="item" id="sidebar-settings" href="/settings">
      <i class="settings icon"></i>
      Settings
    </a>
    <a class="item" id="sidebar-logout" href="main/session_destroy">
      <i class="external icon"></i>
      Logout
    </a>
  </div>
  <div class="pusher">
    <div id="headerbar" class="ui large borderless inverted grey top attached menu">
      <div class="left menu">
        <a class="center aligned item">
          <i class="sidebar icon"></i>
        </a>
      </div>
      <div class="center menu">
        <span class="header item">
          FAEREE
        </span>
      </div>
      <div class="right menu">
        <a class="item">
          <i class="share icon"></i>
        </a>
      </div>
    </div>
    <div id="navbar" class="ui three item secondary pointing large green bottom attached menu">
      <a class="item" id="navbar-park" href="/park">
      <i class="car icon"></i>
         Park
      </a>
      <a class="item" id="navbar-dashboard" href="/">
      <i class="dashboard icon"></i>
        Dashboard
      <%#= link_to 'Edit', edit_users_path %>
      </a>
      <a class="item" id="navbar-options" href="/options">
      <i class="options icon"></i>
        Options
      </a>
    </div>

    <div id="page-content" class="ui container ">
      <%= yield %>
    </div>

  </div>



  <!-- jquery -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
  <!-- javascript -->
   <script src="/assets/javascripts/application.js"></script>
  
  <script>
    $('.top.menu').children().first().on('click', function(){
      $('.ui.sidebar').sidebar('toggle');
    });
    $('.ui.accordion').accordion()
  </script>

</body>
</html>
